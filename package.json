{
    "name": "purity",
    "version": "0.1.0",
    "repository": "https://github.com/robertwayne/purity",
    "description": "A seriously minimalistic blog theme for Zola.",
    "author": "Rob Wagner <rob@sombia.com>",
    "license": "MIT OR Apache-2.0",
    "type": "module",
    "private": true,
    "scripts": {
        "build": "npx postcss styles/**/*.css --dir static",
        "watch": "npx postcss styles/**/*.css --dir static --watch",
        "fmt": "prettier --write --plugin-search-dir=. **/*.{js,css,cjs,json}"
    },
    "devDependencies": {
        "autoprefixer": "^10.4.16",
        "cssnano": "^6.0.1",
        "postcss": "^8.4.31",
        "postcss-cli": "^10.1.0",
        "postcss-load-config": "^4.0.1",
        "prettier": "^3.0.3",
        "prettier-plugin-tailwindcss": "^0.5.7",
        "tailwindcss": "^3.3.5"
    },
    "dependencies": {
        "@tailwindcss/typography": "^0.5.10"
    }
}
